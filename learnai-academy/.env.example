# ==================================
# LearnAI Academy - Environment Variables
# ==================================
# Copy this file to .env and fill in the actual values
# DO NOT commit .env to version control!

# ==================================
# Node Environment
# ==================================
# Options: development, production, test
NODE_ENV=development

# ==================================
# Application
# ==================================
# Port for the Next.js application
PORT=3000

# Logging level
# Options: error, warn, info, http, debug
LOG_LEVEL=info

# ==================================
# Database - PostgreSQL
# ==================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Example: postgresql://postgres:password@localhost:5432/learnai_academy
DATABASE_URL=postgresql://postgres:password@localhost:5432/learnai_academy

# ==================================
# Redis Cache
# ==================================
# Redis connection string for caching and rate limiting
# Format: redis://HOST:PORT or rediss://HOST:PORT (SSL)
# Example: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# ==================================
# Authentication & Security
# ==================================
# JWT Secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
# WARNING: Use a strong, random secret in production!
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this

# JWT token expiration time
# Examples: 7d (7 days), 24h (24 hours), 3600 (3600 seconds)
JWT_EXPIRES_IN=7d

# ==================================
# AI Service - Groq
# ==================================
# Groq API Key for AI tutoring agents
# Get your key at: https://console.groq.com/keys
# Optional in development, REQUIRED in production
GROQ_API_KEY=your-groq-api-key-here

# ==================================
# Optional - Production Recommended
# ==================================

# Sentry DSN for error tracking (recommended for production)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate limiting configuration (optional, uses defaults if not set)
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000

# Next.js configuration
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==================================
# Development Only
# ==================================

# Enable Prisma query logging in development
# DEBUG=prisma:query

# Enable detailed error pages
# NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# ==================================
# Testing
# ==================================
# These are set automatically in jest.setup.js
# but can be overridden if needed

# TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/learnai_academy_test
# TEST_REDIS_URL=redis://localhost:6380
